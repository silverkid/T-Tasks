<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base theme (with action bar) -->
    <style name="Base.Theme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/grey_850</item>
        <item name="colorPrimaryDark">@color/grey_900</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Base theme (no action bar) -->
    <style name="Base.Theme.NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/grey_850</item>
        <item name="colorPrimaryDark">@color/grey_900</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Theme.Main" parent="Base.Theme.NoActionBar">
        <!-- CAB -->
        <item name="windowActionModeOverlay">true</item>
    </style>

    <!-- About -->
    <style name="Theme.About" parent="AboutLibrariesTheme">
        <item name="colorPrimary">@color/grey_850</item>
        <item name="colorPrimaryDark">@color/grey_900</item>

        <item name="about_libraries_title_description">@android:color/primary_text_dark</item>
    </style>

</resources>
