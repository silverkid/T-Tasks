<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base theme (with action bar) -->
    <style name="Base.Theme" parent="Theme.MaterialComponents.DayNight">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="toolbarStyle">@style/Widget.TTasks.Toolbar</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:navigationBarColor">?attr/colorPrimary</item>
    </style>

    <!-- Base theme (no action bar) -->
    <style name="Base.Theme.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <!--<item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">?attr/colorPrimary</item>
        <item name="android:navigationBarColor">?attr/colorPrimary</item>
        <!--<item name="colorOnSecondary">@color/background_color</item>-->
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.App.MaterialAlertDialog</item>
    </style>

    <!-- Base theme (dark action bar) -->
    <style name="Base.Theme.DarkActionBar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="toolbarStyle">@style/Widget.TTasks.Toolbar</item>
        <item name="android:colorBackground">?attr/colorPrimary</item>
        <item name="android:navigationBarColor">?attr/colorPrimary</item>
    </style>

    <!-- Main -->
    <style name="Base.Theme.Main" parent="Base.Theme.NoActionBar">
        <item name="android:colorBackground">?attr/colorPrimary</item>
        <!-- CAB -->
        <item name="windowActionModeOverlay">true</item>
    </style>

    <!-- Main theme -->
    <style name="Theme.Main" parent="Base.Theme.Main">
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowBackground">@drawable/launch_screen</item>
        <!--<item name="android:windowSharedElementsUseOverlay">false</item>-->
        <!--<item name="android:windowExitTransition">@transition/edit_task_enter</item>-->
    </style>

    <!-- Task Detail -->
    <style name="Base.Theme.TaskDetail" parent="Base.Theme.NoActionBar">
        <item name="popupMenuStyle">@style/PopupMenu</item>
        <item name="coordinatorLayoutStyle">@style/Widget.Support.CoordinatorLayout</item>
    </style>

    <!-- Task Detail theme -->
    <style name="Theme.TaskDetail" parent="Base.Theme.TaskDetail">
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
        <item name="android:windowSharedElementReturnTransition">@android:transition/no_transition</item>
        <item name="android:windowEnterTransition">@transition/task_detail_enter</item>
        <item name="android:windowReturnTransition">@transition/task_detail_return</item>
        <item name="android:windowBackground">@color/background_super_dark</item>
    </style>

    <!-- Edit Task theme -->
    <style name="Theme.EditTask" parent="Base.Theme.DarkActionBar" >
        <item name="android:spinnerItemStyle">@style/SpinnerItemStyle</item>
    </style>

    <!-- Sign In -->
    <style name="Theme.SignIn" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">?attr/colorPrimary</item>
    </style>

    <!-- Settings -->
    <style name="Theme.Settings" parent="Base.Theme.DarkActionBar" />

    <!-- About -->
    <style name="Theme.About" parent="Theme.MaterialComponents.NoActionBar" >
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorSurface">@color/task_background</item>
        <item name="colorOnSurface">@color/colorOnSurfaceAbout</item>
        <item name="android:windowBackground">?attr/colorPrimary</item>
        <item name="aboutLibrariesStyle">@style/AppAboutLibrariesStyle</item>
    </style>

    <!-- Widget configure -->
    <style name="Theme.TasksWidgetConfigure" parent="Theme.AppCompat.Light.Dialog" />

    <style name="BottomSheetDialogTheme" parent="@style/Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorOnSecondary">@android:color/white</item>
        <item name="bottomSheetStyle">@style/BottomSheet.Modal.Transparent</item>
    </style>
    
    <style name="ThemeOverlay.App.MaterialAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="buttonBarPositiveButtonStyle">@style/Widget.App.Button</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.App.Button</item>
    </style>

</resources>
