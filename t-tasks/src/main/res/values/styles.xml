<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppAboutLibrariesStyle" parent="AboutLibrariesStyle">
        <item name="aboutLibrariesDescriptionTitle">?android:textColorPrimaryInverse</item>
        <item name="aboutLibrariesDescriptionText">?android:textColorSecondaryInverse</item>
        <item name="aboutLibrariesDescriptionDivider">?android:textColorSecondaryInverse</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar"/>

    <style name="Widget.App.BottomSheet.Modal.Transparent" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light"/>

    <style name="PopupMenu" parent="@style/Widget.AppCompat.Light.PopupMenu">
        <item name="overlapAnchor">true</item>
        <item name="android:dropDownHorizontalOffset">-4dp</item>
        <item name="android:dropDownVerticalOffset">4dp</item>
    </style>

    <!-- A spinner item style that better resembles TextViews -->
    <style name="SpinnerItemStyle" parent="@style/TextAppearance.AppCompat.Widget.TextView.SpinnerItem">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearance.TaskTitle.TaskDetail" parent="@style/TextAppearance.AppCompat.Title.Inverse" />

    <style name="TextAppearance.TaskListTitle.TaskDetail" parent="@style/TextAppearance.AppCompat.Subhead.Inverse" />

    <style name="ShapeAppearanceOverlay.TTasks.MaterialCardView.Rounded.Top" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">8dp</item>
        <item name="cornerSizeTopRight">8dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.TTasks.MaterialCardView.Rounded.Bottom" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomLeft">8dp</item>
        <item name="cornerSizeBottomRight">8dp</item>
    </style>

    <style name="Widget.App.Toolbar" parent="Widget.MaterialComponents.Toolbar.PrimarySurface">
        <item name="android:background">?colorPrimary</item>
        <item name="android:elevation">0dp</item>
    </style>

    <style name="Widget.App.ActionBar" parent="Widget.MaterialComponents.ActionBar.Primary">
        <item name="elevation">0dp</item>
    </style>

    <style name="Widget.TTasks.TextInputLayout.OutlinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
    </style>

    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Button</item>
    </style>
    
    <style name="ThemeOverlay.App.Button" parent="">
        <item name="colorPrimary">@color/colorAccent</item>
    </style>

</resources>
